<aura:component >
    <aura:attribute name="source" type="CSegment"/>
 	<aura:registerEvent name="deleteCSegmentEvent" type="c:deleteCSegmentEvent"/>
    
 	<div class="filter">
	    <span><i>Source {!v.source.Segment.Id}</i></span>    
        <ui:button aura:id="deleteSource" buttonTitle="Delete Source" class="btn btn-danger btn-sm" label="del" press="{!c.delete}"/>
        <ui:inputSelect class="form-control-narrow" aura:id="sourceType" change="{!c.handleSourceType}">
            <ui:inputSelectOption text="Select Source Type"/>
            <ui:inputSelectOption text="Campaign" label="Campaign" value="{!v.source.Segment.Source_Type__c == 'Campaign'}" />
            <ui:inputSelectOption text="Report" label="Report" value="{!v.source.Segment.Source_Type__c == 'Report'}" />
    	</ui:inputSelect>
        
        <aura:if isTrue="{!v.source.Segment.Source_Type__c == 'Report'}">
            <ui:inputText class="form-control" aura:id="report" value="{!v.source.Segment.Source_ID__c}" />
            <!--                                            
            <ui:inputSelect class="form-control" aura:id="report">
                <ui:inputSelectOption text="Select Report"/>
                <ui:inputSelectOption text="{!v.source.Segment.Source_ID__c}" value="true"/>
            </ui:inputSelect>
			-->                                                                                         
        </aura:if>
        <aura:if isTrue="{!v.source.Segment.Source_Type__c == 'Campaign'}">
            <ui:inputText class="form-control" aura:id="campaign" value="{!v.source.Segment.Source_ID__c}" />
            <!--                                            
            <ui:inputSelect class="form-control" aura:id="campaign">
                <ui:inputSelectOption text="Select Campaign"/>
                <ui:inputSelectOption text="{!v.source.Segment.Source_ID__c}" value="true"/>
            </ui:inputSelect>
			-->                                                                                         
        </aura:if>
	</div>
</aura:component>